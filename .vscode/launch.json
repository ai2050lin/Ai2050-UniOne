    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend Only",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/server.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Frontend Only",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/frontend",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Local:.*(http://localhost:\\d+)",
                "uriFormat": "%s"
            }
        }
    ],
